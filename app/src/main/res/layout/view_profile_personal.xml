<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/data_mahasiswa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="@color/whitedrawer">

            <LinearLayout
                android:id="@+id/frame_foto"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="#91cef5">

                <ImageButton
                    android:id="@+id/foto_profil"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/nama_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:layout_below="@+id/username_mahasiswa"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/npm_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_below="@+id/nama_mahasiswa"
                    android:textColor="@color/list_divider"
                    />
                <TextView
                    android:id="@+id/nohp_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_below="@+id/npm_mahasiswa"
                    android:textColor="@color/list_divider"
                    />
                <TextView
                    android:id="@+id/email_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_below="@+id/nohp_mahasiswa"
                    android:textColor="@color/list_divider"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/ColorPrimary">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Role"
                    android:textSize="24sp"
                    android:layout_marginRight="260dp"
                    />
                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/twitter_blue"
                    android:src="@drawable/ic_add_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonRole"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/role"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
