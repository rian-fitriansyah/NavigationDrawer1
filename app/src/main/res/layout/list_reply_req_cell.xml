<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/isiReplyReq"
        android:layout_below="@+id/user_rep_req"
        android:layout_alignLeft="@+id/user_rep_req"
        android:layout_alignStart="@+id/user_rep_req" />

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/customer_mobile"
        android:src="@drawable/avahome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/user_rep_req"
        android:layout_alignTop="@+id/customer_mobile"
        android:layout_toRightOf="@+id/customer_mobile"
        android:layout_toEndOf="@+id/customer_mobile" />

</RelativeLayout>