<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:orientation="horizontal">

        <ImageButton
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_iconsize"
            android:src="@drawable/ic_back_grey"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/req_jadwal_asis"
            android:textSize="25dip"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_iconsize"
            android:src="@drawable/ic_send_grey"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="9pt"
            android:padding="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="username"
            android:id="@+id/req_jadwal_asis_username"
            android:textSize="13pt"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#FF0000FF"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul:"
                android:textSize="9pt"
                android:padding="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/req_jadwal_asis_judul"
                android:hint="judul"
                android:textSize="13pt"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dip">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="9pt"
            android:text="Kelas">
         </TextView>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerReq" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="15dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="9pt"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonTanggalReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ambil Tanggal"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewTanggalReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="20dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu"
            android:textSize="9pt"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonWaktuReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ambil Waktu"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewWaktuReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <TextView
        android:padding="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Asistensi"
        android:textSize="25dip"
        android:textColor="@color/twitter_blue"/>


    <EditText
        android:paddingLeft="20dip"
        android:paddingBottom="20dip"
        android:id="@+id/req_jadwal_asis_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dip"/>

</LinearLayout>